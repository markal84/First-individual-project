*,
*:after,
*:before {
    margin: 0;
    padding: 0;
    @include border-box;
    }
a {
    text-decoration: none;
}
img { //fluid images
    width: auto;
    max-width: 100%;
    height: auto !important; 
    }    
 
%clearfix {
    *zoom: 1;
    &:before, 
    &:after {
        content: " ";
        display: table;
    }
    &:after {
        clear: both;
    }
}    

.wrapper,
.row {
    @extend %clearfix;
}

.wrapper {
    width: 100%;
    //max-width: $grid-max-width; 
    }
    
// columns creator    
@for $i from 1 through $grid-columns {
 
    .col-#{$i} { 
        width: 100% / $grid-columns * $i;
        }
}

    
[class*='col-'] {
    float: left;
    //padding: 1em;
    min-height: 1px; 
    }
 

